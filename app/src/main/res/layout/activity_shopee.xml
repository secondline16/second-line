<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shopee">

    <ImageView
        android:id="@+id/ivBgAtasShp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/bg_top_rounded"
        android:src="@drawable/shp_bg_atas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivChatAtas"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_baseline_chat_24"
        app:layout_constraintRight_toRightOf="@id/ivBgAtasShp"
        app:layout_constraintTop_toTopOf="@id/ivBgAtasShp" />

    <ImageView
        android:id="@+id/ivKeranjangAtas"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/shopping_cart_24"
        app:layout_constraintBottom_toBottomOf="@id/ivChatAtas"
        app:layout_constraintRight_toLeftOf="@id/ivChatAtas"
        app:layout_constraintTop_toTopOf="@id/ivChatAtas" />

    <EditText
        android:id="@+id/etSearchShp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/bg_normal"
        android:backgroundTint="@color/white"
        android:hint="\t\t\t\t\t\tCelana Olahraga Pria Pendek"
        android:textColorHint="#f54828"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/ivChatAtas"
        app:layout_constraintLeft_toLeftOf="@id/ivBgAtasShp"
        app:layout_constraintRight_toRightOf="@id/ivBgAtasShp"
        app:layout_constraintTop_toTopOf="@id/ivChatAtas" />

    <ImageView
        android:id="@+id/ivSearchIconShp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/search_24"
        app:layout_constraintBottom_toBottomOf="@id/etSearchShp"
        app:layout_constraintLeft_toLeftOf="@id/etSearchShp"
        app:layout_constraintTop_toTopOf="@id/etSearchShp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardUserMoney"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBgAtasShp"></androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivUserMoneyShp1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:elevation="2dp"
        android:src="@drawable/shp_user_money_item1"
        app:layout_constraintBottom_toBottomOf="@id/cardUserMoney"
        app:layout_constraintLeft_toLeftOf="@id/cardUserMoney"
        app:layout_constraintTop_toTopOf="@id/cardUserMoney" />

    <View
        android:id="@+id/viewSeparatorUserMoneyShp1"
        android:layout_width="1sp"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:background="#dcdcdc"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/cardUserMoney"
        app:layout_constraintLeft_toRightOf="@id/ivUserMoneyShp1"
        app:layout_constraintTop_toTopOf="@id/cardUserMoney" />

    <ImageView
        android:id="@+id/ivUserMoneyShp2"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:elevation="2dp"
        android:src="@drawable/shp_user_money_item2"
        app:layout_constraintBottom_toBottomOf="@id/cardUserMoney"
        app:layout_constraintLeft_toRightOf="@id/viewSeparatorUserMoneyShp1"
        app:layout_constraintTop_toTopOf="@id/cardUserMoney" />

    <View
        android:id="@+id/viewSeparatorUserMoneyShp2"
        android:layout_width="1sp"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:background="#dcdcdc"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/cardUserMoney"
        app:layout_constraintLeft_toRightOf="@id/ivUserMoneyShp2"
        app:layout_constraintTop_toTopOf="@id/cardUserMoney" />

    <ImageView
        android:id="@+id/ivUserMoneyShp3"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:elevation="2dp"
        android:src="@drawable/shp_user_money_item3"
        app:layout_constraintBottom_toBottomOf="@id/cardUserMoney"
        app:layout_constraintLeft_toRightOf="@id/viewSeparatorUserMoneyShp2"
        app:layout_constraintTop_toTopOf="@id/cardUserMoney" />

    <GridLayout
        android:id="@+id/girdMenuShp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:columnCount="4"
        android:rowCount="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardUserMoney">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:src="@drawable/shp_pedulilindungi" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:src="@drawable/shp_pulsa_tagihan" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:src="@drawable/shp_market" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:src="@drawable/shp_mall" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:src="@drawable/shp_gratis_ongkir" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:src="@drawable/shp_games" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:src="@drawable/shp_cod" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:src="@drawable/shp_food" />
    </GridLayout>

    <RelativeLayout
        android:id="@+id/rlVoucerTengahShp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/girdMenuShp">

        <ImageView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/shp_voucer_tengah_1"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/shp_voucer_tengah_2"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFlashSaleShp"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:cardElevation="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rlVoucerTengahShp" />

    <ImageView
        android:id="@+id/ivFlashSaleShp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:elevation="1dp"
        android:src="@drawable/shp_flashsale"
        app:layout_constraintLeft_toLeftOf="@id/cardFlashSaleShp"
        app:layout_constraintTop_toTopOf="@id/cardFlashSaleShp" />

    <ImageView
        android:id="@+id/ivFlashSaleTimeShp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:src="@drawable/shp_flashsale_time"
        app:layout_constraintBottom_toBottomOf="@id/ivFlashSaleShp"
        app:layout_constraintLeft_toRightOf="@id/ivFlashSaleShp"
        app:layout_constraintTop_toTopOf="@id/ivFlashSaleShp" />

    <ImageView
        android:id="@+id/ivFlashSaleLihatLainnyaShp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:src="@drawable/shp_lihatlainnya"
        app:layout_constraintBottom_toBottomOf="@id/ivFlashSaleShp"
        app:layout_constraintRight_toRightOf="@id/cardFlashSaleShp"
        app:layout_constraintTop_toTopOf="@id/ivFlashSaleShp" />

    <GridLayout
        android:id="@+id/gridItemFlashSale"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:columnCount="5"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:rowCount="1"
        app:layout_constraintLeft_toLeftOf="@id/cardFlashSaleShp"
        app:layout_constraintRight_toRightOf="@id/cardFlashSaleShp"
        app:layout_constraintTop_toBottomOf="@id/ivFlashSaleShp">

        <ImageView
            android:id="@+id/ivItemFlashSaleShp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/shp_item" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/ivItemFlashSaleShp1"
            android:src="@drawable/shp_item" />
    </GridLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="1sp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#bababa"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="@id/cardBottomNav" />

    <ImageView
        android:id="@+id/ivBotShpLiveShp"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:elevation="1dp"
        android:src="@drawable/shp_bot_live"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/ivBotFeedShp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:elevation="1dp"
        android:src="@drawable/shp_bot_feed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivBotRecomendationShp"
        app:layout_constraintRight_toLeftOf="@id/ivBotShpLiveShp" />

    <ImageView
        android:id="@+id/ivBotRecomendationShp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="2dp"
        android:elevation="1dp"
        android:src="@drawable/shp_bot_rekomendasi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivBotFeedShp" />

    <ImageView
        android:id="@+id/ivBotNotifShp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:elevation="1dp"
        android:src="@drawable/shp_bot_notif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivBotShpLiveShp"
        app:layout_constraintRight_toLeftOf="@id/ivBotUserShp" />

    <ImageView
        android:id="@+id/ivBotUserShp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="2dp"
        android:elevation="1dp"
        android:src="@drawable/shp_bot_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivBotNotifShp"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>